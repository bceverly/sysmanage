    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--host=api.sysmanage.org",
                "--port=8443",
                "--ssl-keyfile=../certs/api.sysmanage.org/privkey.pem",
                "--ssl-certfile=../certs/api.sysmanage.org/cert.pem",
                "--ssl-ca-certs=../certs/api.sysmanage.org/fullchain.pem",
                "--reload"
            ],
            "jinja": true
        }
    ]
}